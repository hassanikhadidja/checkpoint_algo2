// Fonction qui retourne le produit scalaire de deux vecteurs
FUNCTION dot_product(v1 : ARRAY_OF REAL, v2 : ARRAY_OF REAL, dim : INTEGER) : REAL
VAR
    i : INTEGER
    ps : REAL
BEGIN
    ps := 0   // initialisation

    FOR i FROM 0 TO dim-1 DO
        ps := ps + v1[i] * v2[i]
    END_FOR

    RETURN ps   // la fonction renvoie une valeur
END_FUNCTION
